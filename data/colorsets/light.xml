<theme>

	<formatVersion>4</formatVersion>
	<include>./common.xml</include>

	<feature supported="carousel">

		<view name="system">

			<image name="background" extra="true" />

			<image name="system_carousel_background" extra="true">
				<color>ffffff</color>
			</image>

			<image name="system_carousel_border" extra="true">
				<color>ffffff</color>
			</image>

			<image name="systemInfoBack" extra="true">
				<color>ffffff</color>
			</image>

			<text name="systemInfo">
				<color>222222</color>
			</text>

		</view>

	</feature>

	<view name="basic, detailed">

		<image name="gamelist_background" extra="true">
			<color>ffffff</color>
		</image>

		<textlist name="gamelist">
			<selectedColor>38a5c9</selectedColor>
			<primaryColor>666666</primaryColor>
			<secondaryColor>222222</secondaryColor>
		</textlist>

		<image name="gamelist_border" extra="true">
			<color>ffffff</color>
		</image>

	</view>

</theme>
