<theme>

	<formatVersion>4</formatVersion>

	<view name="menu">

		<menuText name="menufooter">
			<fontSize>.025</fontSize>
			<color>ffffffff</color>
		</menuText>

		<menuText name="menutext">
			<fontSize>.042</fontSize>
			<color>ffffffff</color>
			<separatorColor>ffffffff</separatorColor>
			<selectorColor>ffffffff</selectorColor>
			<selectedColor>333333FF</selectedColor>
		</menuText>

		<menuTextSmall name="menutextsmall">
			<fontSize>.035</fontSize>
			<color>ffffffff</color>
		</menuTextSmall>

		<menuText name="menutitle">
			<fontSize>.06</fontSize>
			<color>ffffffff</color>
		</menuText>

		<menuBackground name="menubg">
			<color>222222ee</color>
			<path>./../data/arts/frame.png</path>
			<fadePath>./../data/arts/scroll_gradient.png</fadePath>
		</menuBackground>

		<menuIcons name="menuicons">
			<iconKodi>./../data/arts/menu_icons/Kodi.png</iconKodi>
			<iconSystem>./../data/arts/menu_icons/System.png</iconSystem>
			<iconUpdates>./../data/arts/menu_icons/Updates.png</iconUpdates>
			<iconGames>./../data/arts/menu_icons/Games.png</iconGames>
			<iconControllers>./../data/arts/menu_icons/Controllers.png</iconControllers>
			<iconUI>./../data/arts/menu_icons/UI.png</iconUI>
			<iconSound>./../data/arts/menu_icons/Sound.png</iconSound>
			<iconNetwork>./../data/arts/menu_icons/Network.png</iconNetwork>
			<iconScraper>./../data/arts/menu_icons/Scraper.png</iconScraper>
			<iconAdvanced>./../data/arts/menu_icons/Advanced.png</iconAdvanced>
			<iconQuit>./../data/arts/menu_icons/Quit.png</iconQuit>
			<iconRestart>./../data/arts/menu_icons/Restart.png</iconRestart>
			<iconShutdown>./../data/arts/menu_icons/Shutdown.png</iconShutdown>
			<iconFastShutdown>./../data/arts/menu_icons/Fastshutdown.png</iconFastShutdown>
		</menuIcons>

	</view>

</theme>
