<theme>

	<formatVersion>4</formatVersion>

	<view name="system">
		
		<image name="console" extra="true">
			<path>./console.svg</path>
		</image>
		<image name="console" extra="true" region="eu">
			<path>./eu/console.svg</path>
		</image>
		<image name="console" extra="true" region="jp">
			<path>./jp/console.svg</path>
		</image>
		<image name="console" extra="true" region="us">
			<path>./us/console.svg</path>
		</image>
		
	</view>
	
	<view name="basic, detailed">
	
		<image name="controller" extra="true">
			<pos>2 2</pos>
		</image>
		
	</view>
	
	<view name="detailed">
		
		<rating name="md_rating">
			<pos>2 2</pos>
		</rating>
		
		<image name="release_date_logo" extra="true">
			<pos>2 2</pos>
		</image>
		
		<datetime name="md_releasedate">
			<pos>2 2</pos>
		</datetime>
		
		<image name="publisher_logo" extra="true">
			<pos>2 2</pos>
		</image>
		
		<text name="md_publisher">
			<pos>2 2</pos>
		</text>
		
		<image name="developer_logo" extra="true">
			<pos>2 2</pos>
		</image>
		
		<text name="md_developer">
			<pos>2 2</pos>
		</text>
		
		<image name="genre_logo" extra="true">
			<pos>2 2</pos>
		</image>
		
		<text name="md_genre">
			<pos>2 2</pos>
		</text>
		
		<image name="players_logo" extra="true">
			<pos>2 2</pos>
		</image>
		
		<text name="md_players">
			<pos>2 2</pos>
		</text>
		
		<image name="lastplayed_logo" extra="true">
			<pos>2 2</pos>
		</image>
		
		<datetime name="md_lastplayed">
			<pos>2 2</pos>
		</datetime>
		
		<image name="playcount_logo" extra="true">
			<pos>2 2</pos>
		</image>
		
		<text name="md_playcount">
			<pos>2 2</pos>
		</text>
		
	</view>
	
</theme>
