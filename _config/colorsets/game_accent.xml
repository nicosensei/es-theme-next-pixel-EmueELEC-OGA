<theme>

	<formatVersion>4</formatVersion>
	<include>./common.xml</include>
	<include>./../../$system/_config/color_accent.xml</include>

	<feature supported="carousel">

		<view name="system">

			<image name="background" extra="true" />

			<text name="systemInfo">
				<color>ffffff</color>
			</text>

		</view>

	</feature>

	<view name="basic, detailed">

		<image name="gamelist_background" extra="true" />

		<textlist name="gamelist">
			<selectedColor>38a5c9</selectedColor>
			<primaryColor>444444</primaryColor>
			<secondaryColor>888888</secondaryColor>
		</textlist>

		<image name="gamelist_border" extra="true" />

	</view>

</theme>
