<theme>

	<formatVersion>4</formatVersion>
	<include>./common.xml</include>

	<feature supported="carousel">

		<view name="system">

			<image name="system_carousel_background" extra="true">
				<origin>1 .5</origin>
				<pos>1 .5</pos>
				<maxSize>2 1</maxSize>
				<path>./../../_inc/system_carousel_vertical_wheel_background.png</path>
			</image>

			<carousel name="systemcarousel">
				<type>vertical_wheel</type>
				<pos>.874 .5</pos>
				<origin>1 .5</origin>
				<size>1 1</size>
				<logoRotation>-8</logoRotation>
				<logoRotationOrigin>3.9 .5</logoRotationOrigin>
				<maxLogoCount>7</maxLogoCount>
				<logoAlignment>right</logoAlignment>
				<defaultTransition>instant</defaultTransition>
			</carousel>

			<image name="system_carousel_border" extra="true">
				<origin>1 .5</origin>
				<maxSize>2 1</maxSize>
				<pos>.998 .5</pos>
				<path>./../../_inc/system_carousel_vertical_wheel_border.png</path>
			</image>

			<image name="system_count_background" extra="true">
				<pos>.9 .57</pos>
				<origin>.5 0</origin>
				<size>.2 .03</size>
				<path>./../../_inc/system_info_gradient_background.png</path>
			</image>

			<text name="systemInfo">
				<origin>.5 0</origin>
				<pos>.9 .58</pos>
				<size>.16 .01</size>
				<color>ffffff</color>
				<fontSize>.021</fontSize>
				<fontPath>./../../_inc/Exo2-SemiBoldCondensed.otf</fontPath>
			</text>

		</view>

	</feature>

	<view name="system">

		<image name="background" extra="true">
			<origin>1 .5</origin>
			<pos>1 .5</pos>
			<path>./../../_inc/background_wheel.png</path>
		</image>

		<image name="logo">
			<path>./../../_inc/_inc/logo_right.png</path>
		</image>

		<image name="logo" region="eu">
			<path>./../../_inc/_inc/logo_right.png</path>
		</image>

		<image name="logo" region="us">
			<path>./../../_inc/_inc/logo_right.png</path>
		</image>

		<image name="logo" region="jp">
			<path>./../../_inc/_inc/logo_right.png</path>
		</image>

	</view>

</theme>
