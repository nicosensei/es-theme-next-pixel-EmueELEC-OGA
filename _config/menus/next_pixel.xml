<theme>

	<formatVersion>4</formatVersion>

	<view name="menu">

		<menuText name="menufooter">
			<fontSize>.025</fontSize>
			<color>ffffffff</color>
		</menuText>

		<menuText name="menutext">
			<fontSize>.035</fontSize>
			<color>ffffffff</color>
			<separatorColor>ffffffff</separatorColor>
			<selectorColor>ffffffff</selectorColor>
			<selectedColor>333333FF</selectedColor>
		</menuText>

		<menuTextSmall name="menutextsmall">
			<fontSize>.028</fontSize>
			<color>ffffffff</color>
		</menuTextSmall>

		<menuText name="menutitle">
			<fontSize>.04</fontSize>
			<color>ffffffff</color>
		</menuText>

		<menuBackground name="menubg">
			<color>222222ee</color>
			<path>./../_inc/frame.png</path>
			<fadePath>./../_inc/scroll_gradient.png</fadePath>
		</menuBackground>

		<menuIcons name="menuicons">
			<iconKodi>./../_inc/menu_icons/Kodi.png</iconKodi>
			<iconSystem>./../_inc/menu_icons/System.png</iconSystem>
			<iconUpdates>./../_inc/menu_icons/Updates.png</iconUpdates>
			<iconGames>./../_inc/menu_icons/Games.png</iconGames>
			<iconControllers>./../_inc/menu_icons/Controllers.png</iconControllers>
			<iconUI>./../_inc/menu_icons/UI.png</iconUI>
			<iconSound>./../_inc/menu_icons/Sound.png</iconSound>
			<iconNetwork>./../_inc/menu_icons/Network.png</iconNetwork>
			<iconScraper>./../_inc/menu_icons/Scraper.png</iconScraper>
			<iconAdvanced>./../_inc/menu_icons/Advanced.png</iconAdvanced>
			<iconQuit>./../_inc/menu_icons/Quit.png</iconQuit>
			<iconRestart>./../_inc/menu_icons/Restart.png</iconRestart>
			<iconShutdown>./../_inc/menu_icons/Shutdown.png</iconShutdown>
			<iconFastShutdown>./../_inc/menu_icons/Fastshutdown.png</iconFastShutdown>
		</menuIcons>

	</view>

</theme>
